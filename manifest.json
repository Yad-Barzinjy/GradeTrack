{
  "name": "Schulnoten-Manager",
  "short_name": "Noten",
  "description": "Erfasse, vergleiche und exportiere Schulnoten (1–6 oder 0–15 Punkte)",
  "start_url": "/index.html",
  "display": "standalone",
  "background_color": "#0a0e27",
  "theme_color": "#007AFF",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "/web-app-manifest-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/web-app-manifest-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "categories": ["education", "productivity"],
  "lang": "de-DE",
  "dir": "ltr",
  "screenshots": [],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": ["application/json", "text/csv"]
        }
      ]
    }
  }
}
